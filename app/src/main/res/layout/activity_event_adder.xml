<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventAdder"
    android:background="#1A1A1A">

    <TextView
        android:id="@+id/myNewEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="600dp"
        android:fontFamily="sans-serif-condensed"
        android:text="My new event"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#1E90FF"
        app:layout_constraintBottom_toTopOf="@id/btnAddEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddEvent2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="78dp"
        android:background="#F44336"
        android:backgroundTint="#1E90FF"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/add"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="400dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnAddEvent2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myNewEventTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEventName"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:hint="Enter event name"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#1E90FF"
            android:textColorLink="#1E90FF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDateBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="400dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnAddEvent2"
        app:layout_constraintStart_toEndOf="@+id/textFrom"
        app:layout_constraintTop_toBottomOf="@id/textInputEventName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDateFrom"
            android:layout_width="102dp"
            android:layout_height="49dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Select date"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#1E90FF"
            android:textColorLink="#1E90FF" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Date"
        android:textColor="#1E90FF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputEventName" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="76dp"
        android:background="@android:drawable/editbox_background"
        android:drawableLeft="@drawable/ic_baseline_place_24"
        android:drawablePadding="16sp"
        android:gravity="center_vertical"
        android:hint="Enter address"
        android:padding="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textFrom" />

    <TextView
        android:id="@+id/text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text" />

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text"
        android:textAlignment="center"
        android:theme="@style/AppTheme.Picker"
        />


</androidx.constraintlayout.widget.ConstraintLayout>